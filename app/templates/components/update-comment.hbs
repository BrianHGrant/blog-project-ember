{{#if updateCommentForm}}
<h4>Update Comment</h4>
<form>
  <div class="form-group">
      <label for="author">Your name:</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input type="date" value=date id="date" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="text">Your comment:</label>
      {{textarea value=text id="text" class="form-control"}}
    </div>
    <button {{action 'update' comment}}>Save</button>
  </form>
{{else}}
  <button class="btn btn-warning" {{action 'showUpdateForm'}}>Update</button>
{{/if}}
