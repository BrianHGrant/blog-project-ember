{{#if addNewComment}}
  <form>
    <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input type="date" value=date id="date" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="text">Your comment:</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>
      <button {{action 'saveComment'}}>Save</button>
    </form>
{{else}}
<button {{action 'showCommentForm'}} class="btn btn-success">Add Comment</button>
{{/if}}
